@model IdentityResourceClaimInputModel
<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Identity Resources</a></li>
        <li class="breadcrumb-item"><a asp-action="View" asp-route-id="@ViewBag.Resource.Id">@ViewBag.Resource.Name</a></li>
        <li class="breadcrumb-item active">Edit Claim</li>
        <li class="ml-auto">
            <a href="../DeleteClaim/@ViewBag.ClaimId" class="btn btn-danger btn-sm">Delete Claim</a>
        </li>
    </ol>
</nav>

<form method="post" class="form-inline">
    <input asp-for="Type" class="form-control" placeholder="Claim Type">

    <a asp-action="View" asp-route-id="@ViewBag.Resource.Id" class="btn btn-secondary mx-2">Cancel</a>
    <button class="btn btn-primary">Save Claim</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
