@model ClientInputModel

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">Clients</a></li>
        <li class="breadcrumb-item active">Add</li>
    </ol>
</nav>

<form method="post">
    <div class="form-row mb-3">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-header">Native</div>
                <div class="card-body">
                    Mobile, desktop, CLI, and smart device apps running natively.
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-header">SPA</div>
                <div class="card-body">
                    Single-Page Application - a JavaScript frontend app that uses an API.
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-header">Webapp</div>
                <div class="card-body">
                    Traditional web application using redirects.
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-header">Noninteractive</div>
                <div class="card-body">
                    CLIs, deamons or services running in backend.
                </div>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Id"></label>
            <input asp-for="Id" class="form-control">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Secret"></label>
            <input asp-for="Secret" class="form-control">
            <div class="form-text text-warning">Please make sure you save this because you will not see it again.</div>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="RedirectUrl"></label>
            <input asp-for="RedirectUrl" class="form-control">
        </div>
    </div>
    <a asp-action="Index" class="btn btn-secondary mr-2">Cancel</a>
    <button class="btn btn-primary">Add</button>
</form>

@section Scripts{
    <script>
        // From https://stackoverflow.com/questions/105034/how-to-create-guid-uuid
        function uuidv4() {
            return ([1e7] + -1e3 + -4e3 + -8e3 + -1e11).replace(/[018]/g, c =>
                (c ^ crypto.getRandomValues(new Uint8Array(1))[0] & 15 >> c / 4).toString(16)
            );
        }
        $(function () {
            $("#Secret").val(uuidv4());
            $(".card").click(function () {
                $(".card").removeClass("bg-success");
                $(this).addClass("bg-success");
            });
        });
    </script>
}
